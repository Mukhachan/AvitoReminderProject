<LoginScreen>:

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "      Добро\nпожаловать!"
            color:(0,0,0,1)
            size_hint: None, None
            size: 120, 220
            pos_hint: {"center_y": .1, "center_x": .5}
            font_size: "35sp"
        Label:
            text: "Логин"
            color:(0,0,0,1)
            size_hint: None, None
            size: 120, 36
            pos_hint: {"center_y": .1, "center_x": .5}
            font_size: "25sp"
        TextInput:
            id: login
            hint_text: "example@gmail.com"
            size_hint: None, None
            size: 340, 50
            pos_hint: {"center_y": .5, "center_x": .5}
            font_size: "25sp"
            #on_focus: self.insert_text("Фокус" if args[1] else " Нет")
        Label:
            text: "Пароль"
            color:(0,0,0,1)
            size_hint: None, None
            size: 120, 36
            pos_hint: {"center_y": .1, "center_x": .5}
            font_size: "25sp"
        TextInput:
            id: password
            password: True
            size_hint: None, None
            size: 340, 50
            pos_hint: {"center_y": .5, "center_x": .5}
            font_size: "25sp"
        Label:
            size_hint: None, None
            size: 120, 15
        Button:
            id: main_button
            text: "Войти"
            size_hint: None, None
            size: 200, 34
            pos_hint: {"center_y": .45, "center_x": .5}
            font_size: "25sp"
            markup:True
            on_press: root.log_in(login.text, password.text)
            #border_radius: [17]
        Label:
            text: "\n\n\n\n\n\nЗабыли пароль?\n  Вспоминайте."
            color:(0,0,0,1)
            size_hint: None, None
            size: 120, 250
            pos_hint: {"center_y": .1, "center_x": .5}
            font_size: "15sp"


<RegistrationScreen>:
    FloatLayout:
        Label:
            text: "Регистрация"
            size_hint: 0.2, 0.2
            pos_hint: {"center_y": .6, "center_x": .5}
            font_size: "35sp"